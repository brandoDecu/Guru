<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixels16"
        android:layout_marginTop="@dimen/pixels8"
        android:layout_marginRight="@dimen/pixels16"
        android:layout_marginBottom="@dimen/pixels8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/choice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pixels8"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pixels16"
        android:layout_marginRight="@dimen/pixels16"
        android:layout_marginBottom="@dimen/pixels4"
        android:background="@drawable/rounded_box_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pixels4"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>