<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Assessment.AssessmentPageFragment">

    <TextView
        android:id="@+id/outline_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pixels8"
        android:layout_marginTop="@dimen/pixels32"
        android:layout_marginRight="@dimen/pixels8"
        android:layout_marginBottom="@dimen/pixels16"
        android:text="@string/self_awareness_assessment_outline"
        android:textAlignment="center"
        android:textSize="@dimen/pixels24" />

    <TextView
        android:id="@+id/assesment_intro_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pixels32"
        android:layout_marginTop="@dimen/pixels4"
        android:layout_marginRight="@dimen/pixels32"
        android:layout_weight="1"
        android:text="@string/assessment_intro"
        android:textAlignment="center"
        android:textSize="18sp" />
</LinearLayout>