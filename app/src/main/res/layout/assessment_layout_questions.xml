<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels8"
                android:layout_marginTop="@dimen/pixels32"
                android:layout_marginRight="@dimen/pixels8"
                android:layout_marginBottom="@dimen/pixels16"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="@dimen/pixels24" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels16"
                android:layout_marginTop="@dimen/pixels4"
                android:layout_marginRight="@dimen/pixels16"
                android:layout_marginBottom="@dimen/pixels16"
                android:addStatesFromChildren="false">

                <RadioButton
                    android:id="@+id/radiobtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="RadioButton"
                    android:textSize="18sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/anythoughts_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels8"
                android:layout_marginRight="@dimen/pixels8"
                android:layout_marginBottom="@dimen/pixels16"
                android:ems="10"
                android:hint="Write down any thoughts"
                android:inputType="textMultiLine"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/page_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pixels8"
        android:gravity="center"
        android:text="1 of 21" />

</LinearLayout>