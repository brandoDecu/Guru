<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/whiteTransparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/assessment_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/pixels8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/pixels8"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assessment_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/pixels4"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/blackTransparent"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/upload_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/pixels8"
            android:src="@drawable/cloud_not_uploaded_24dp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/pixels32"
            android:layout_height="@dimen/pixels32"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/assessment_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pixels4"
        android:layout_marginRight="@dimen/pixels4"
        android:layout_marginBottom="@dimen/pixels4"
        android:background="@drawable/rounded_box_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/largest_text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/largest_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pixels4"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/largest_text2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pixels4"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>